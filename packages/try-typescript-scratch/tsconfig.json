{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/main",
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "traceResolution": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
