{
  "name": "try-typescript-scratch",
  "version": "1.0.0",
  "description": "Type Typescript scratch pad",
  "main": "src/index.ts",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "clean": "trash build test",
    "lint": "eslint --ext ts,tsx ./src",
    "lint:fix": "eslint --ext ts,tsx ./src --fix",
    "lint:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "mocha -r ts-node/register ./**/*.spec.ts"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "lint:fix": "Try to automatically fix any linting problems",
    "test": "Unit test the project"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "chai": "^4.2.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "trash-cli": "^1.4.0",
    "ts-node": "^8.0.3", "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-immutable": "^5.0.0",
    "typescript": "^3.4.2"
  },
  "prettier": {
    "singleQuote": true
  }
}

