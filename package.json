{
  "name": "try-typescript",
  "version": "0.0.1",
  "description": "Try Typescript - personal katas",
  "license": "BSD",
  "scripts": {
    "build": "pnpm --filter {packages/**} build",
    "clean": "pnpm --filter {packages/**} clean",
    "eslint": "eslint packages --ext .ts --ext .tsx",
    "eslint:fix": "eslint packages --ext .ts --ext .tsx --fix",
    "lint": "pnpm run prettier && pnpm run eslint",
    "lint:fix": "pnpm run package:fix && pnpm run prettier:fix && pnpm run eslint:fix",
    "main": "pnpm --filter {packages/**} main",
    "main:build": "pnpm --filter {packages/**} main:build",
    "package:fix": "format-package -w",
    "pre-commit": "lint-staged --quiet",
    "prepare": "husky install",
    "prettier": "pnpx prettier --check .",
    "prettier:fix": "pnpx prettier --write .",
    "test": "pnpm --filter {packages/**} test",
    "update": "pnpm update -rL"
  },
  "devDependencies": {
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "format-package": "^7.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "prettier": "^2.8.8"
  }
}
