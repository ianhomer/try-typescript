{
  "name": "try-typescript",
  "version": "0.0.1",
  "description": "Try Typescript - personal katas",
  "license": "BSD",
  "scripts": {
    "build": "pnpm --filter {packages/**} build",
    "clean": "pnpm --filter {packages/**} clean",
    "eslint": "eslint packages",
    "eslint:fix": "eslint packages --fix",
    "lint": "pnpm run prettier && pnpm run eslint",
    "lint:fix": "pnpm run package:fix && pnpm run prettier:fix && pnpm run eslint:fix",
    "package:fix": "format-package -w",
    "pre-commit": "lint-staged --quiet",
    "prepare": "husky",
    "prettier": "pnpx prettier --check .",
    "prettier:fix": "pnpx prettier --write .",
    "start": "pnpm --filter {packages/**} start",
    "test": "pnpm --filter {packages/**} test",
    "update": "pnpm update -rL"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "format-package": "^7.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "prettier": "^3.4.2"
  }
}
