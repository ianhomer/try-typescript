{
  "name": "root",
  "scripts": {
    "build": "pnpm --filter {packages/**} build",
    "eslint": "eslint packages --ext .ts --ext .tsx",
    "eslint:fix": "eslint packages --ext .ts --ext .tsx --fix",
    "lint": "pnpm run prettier && pnpm run eslint",
    "lint:fix": "pnpm run package:fix && pnpm run prettier:fix && pnpm run eslint:fix",
    "package:fix": "format-package -w",
    "pre-commit": "lint-staged --quiet",
    "prepare": "husky install",
    "prettier": "pnpx prettier --check .",
    "prettier:fix": "pnpx prettier --write .",
    "test": "pnpm --filter {packages/**} test",
    "update": "pnpm update -rL"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "format-package": "^7.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "minimist": "^1.2.7",
    "prettier": "^2.7.1"
  }
}
